---
const { data } = Astro.props;
---

<style>
    .sticker-container {
        background: #111;
        width: 300px;
        height: 400px;
        display: flex;
        gap: 20px;
        flex-direction: column;
        align-items: center;
        margin: 1rem 0;
        border: 3px solid #fff;
    }

    .sticker {
        --size: 180px;

        image-rendering: pixelated;
        width: var(--size);
        height: var(--size);
    }

    .category {
        background: darkred;
        color:#fff;
        padding: 8px;
        border-radius: 15px;
    }
</style>
<div class="sticker-container">
    <h1>{data.name}</h1>
    <img class="sticker" src={data.url} alt={data.name}> 
    <span class="category">{data.categoria}</span>
</div>